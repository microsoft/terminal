+            // Raise an event, so any listeners can handle the mouse wheel event manually.
+            _MouseScrolledHandlers(real, wheelDelta);
+            return 0;
+        }
+        CATCH_LOG();
+    }
+
+    // TODO: handle messages here...
+    return base_type::MessageHandler(message, wparam, lparam);
