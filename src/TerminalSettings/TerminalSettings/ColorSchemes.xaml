                                             IsColorChannelTextInputVisible="False"
                                             IsHexInputVisible="False"
                                             IsAlphaEnabled="False"
                                             IsAlphaSliderVisible="True"
                                             IsAlphaTextInputVisible="True"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Horizontal"></StackPanel>
        </StackPanel>
    </Grid>
</Page>
