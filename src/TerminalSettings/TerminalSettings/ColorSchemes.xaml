                         Width="100" />
                <Button Background="LightYellow"
                        BorderBrush="{StaticResource SystemBaseLowColor}"
                        Height="37"
                        Width="37"
                        Margin="10,22,0,0"
                        Windows10version1809:CornerRadius="2">
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel>
