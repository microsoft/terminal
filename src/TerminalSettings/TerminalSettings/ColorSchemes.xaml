                    </Button.Flyout>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Horizontal">
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1">
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Horizontal">
